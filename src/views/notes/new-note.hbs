<div class="col-md-6 mx-auto">
{{#each errors}}
  <div href="#" class="alert alert-danger rounded-4">
    <div class="d-flex gap-2 w-100 justify-content-between">
      <div>
        <h5 class="fw-bold mb-0">{{text}}</h5>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
{{/each}}
</div>

<div class="col-md-5 mx-auto">
  <div class="modal-content rounded-5" style="border: none;">
    <div class="ps-5 py-4 border-bottom-0">
      <h2 class="display-6 fw-bold crop-title">New Note</h2>
    </div>
    <div class="modal-body p-5 pt-0">
      <form action="/notes/new-note" method="POST">
        <div class="form-floating mb-3">
          <input type="text" name="title" class="form-control rounded-4" id="title" autofocus>
          <label for="title">Title</label>
        </div>
        <div class="form-floating mb-3">
          <textarea name="description" class="form-control" id="floatingTextarea" style="height: 100px"></textarea>
          <label for="floatingTextarea">Description</label>
        </div>
        <button class="w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit">Save</button>
      </form>
    </div>
  </div>
</div>