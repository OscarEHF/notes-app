<div class="d-flex flex-column align-items-start justify-content-start" style="min-height: 80vh;">
  {{> messages}}
  <div class="row w-100 row-cols-lg-3 m-0">
    {{#each notes}}
    <div class="col mb-0">
      <a href="/notes/edit/{{_id}}" class="card card-cover rounded-5">
        <div class="d-flex flex-column h-100 px-5 py-4 pb-3 text-shadow-1">
          <h4 class="pt-2 mt-2 mb-4 display-6 fw-bold crop-title">{{title}}</h4>
          <p class="crop fs-5">{{description}}</p>
          <ul class="d-flex list-unstyled mt-auto">
            <li class="me-auto">
            </li>
            <li class="d-flex align-items-center">
              <small class="text-muted">{{timeago}}</small>
            </li>
          </ul>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
  {{#unless notes}}
  <div class="d-flex flex-column align-items-center justify-content-center w-100 text-center my-3 mx-6 px-3">
    <a href="/notes/add" class="card card-cover w-100 rounded-5 py-3 " aria-current="true">
      <div class="w-100 justify-content-between">
        <div class="p-2">
          <h4 class="display-6 fw-bold crop-title">Hello {{user.name}}! ðŸ‘‹</h4>
          <p class="my-3" style="font-size: 1.25rem;">There are not Notes yet. <small class="text-muted">Click me to create one!</small></p>
        </div>
      </div>
    </a>
  </div>
  {{/unless}}
</div>

<a href="/notes/add" class="floating-button display-6">+</a>